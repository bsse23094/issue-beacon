/* Tailwind CSS - directives for base, components, and utilities */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Premium Dark Mode Design System */
@layer base {
  :root {
    /* Premium Dark Palette */
    --bg-primary: #0a0e1a;
    --bg-secondary: #0f1420;
    --bg-tertiary: #141824;
    --bg-card: #0f1420;
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --text-tertiary: #64748b;
    --border-color: #1e293b;
    --accent-cyan: #06b6d4;
    --accent-cyan-dark: #0891b2;
    --accent-purple: #a855f7;
    --accent-green: #22c55e;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    background: var(--bg-primary);
    color: var(--text-primary);
    font-family: 'Lexend', 'DM Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-weight: 400;
    line-height: 1.6;
    letter-spacing: 0.01em;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
  }

  /* Universal Typography - Premium Font Stack */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Lexend Deca', 'Instrument Sans', sans-serif;
    font-weight: 600;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    line-height: 1.2;
  }

  h1 { font-size: 3rem; font-weight: 700; }
  h2 { font-size: 2.25rem; font-weight: 600; }
  h3 { font-size: 1.875rem; font-weight: 600; }
  h4 { font-size: 1.5rem; font-weight: 600; }
  h5 { font-size: 1.25rem; font-weight: 500; }
  h6 { font-size: 1rem; font-weight: 500; }

  p {
    font-family: 'Lexend', 'DM Sans', sans-serif;
    color: var(--text-secondary);
  }

  code, pre {
    font-family: 'Instrument Sans', 'SF Mono', 'Monaco', 'Cascadia Code', 'Courier New', monospace;
  }

  a {
    color: var(--accent-cyan);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  a:hover {
    color: var(--accent-cyan-dark);
  }
}

@layer components {
  /* Premium Glassmorphism Cards */
  .premium-card {
    padding: 1.5rem;
    border-radius: 0.75rem;
    background: rgba(15, 20, 32, 0.6);
    border: 1px solid rgba(30, 41, 59, 0.5);
    backdrop-filter: blur(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .premium-card:hover {
    transform: translateY(-2px);
    border-color: rgba(6, 182, 212, 0.4);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 0 0 20px rgba(6, 182, 212, 0.1);
  }

  /* Glass Card Effect */
  .glass-card {
    background: rgba(15, 20, 32, 0.5);
    backdrop-filter: blur(16px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 0.75rem;
  }

  /* Floating Animation */
  .float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  /* Premium Gradient Text */
  .gradient-text {
    background: linear-gradient(135deg, #06b6d4, #22d3ee);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Neon Glow Effects - Premium & Subtle */
  .neon-glow-cyan {
    box-shadow: 0 2px 10px rgba(6, 182, 212, 0.2),
                0 4px 20px rgba(6, 182, 212, 0.1);
    border: 1px solid rgba(6, 182, 212, 0.3);
    transition: all 0.3s ease;
  }

  .neon-glow-cyan:hover {
    box-shadow: 0 4px 20px rgba(6, 182, 212, 0.3),
                0 8px 40px rgba(6, 182, 212, 0.15);
    border-color: rgba(6, 182, 212, 0.5);
  }

  .neon-glow-purple {
    box-shadow: 0 2px 10px rgba(168, 85, 247, 0.2),
                0 4px 20px rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  .neon-glow-green {
    box-shadow: 0 2px 10px rgba(34, 197, 94, 0.2),
                0 4px 20px rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  /* GitHub Logo Pulse */
  @keyframes github-pulse {
    0%, 100% {
      transform: scale(1);
      filter: drop-shadow(0 0 10px rgba(6, 182, 212, 0.5));
    }
    50% {
      transform: scale(1.05);
      filter: drop-shadow(0 0 20px rgba(6, 182, 212, 0.7));
    }
  }

  .github-logo-pulse {
    animation: github-pulse 3s ease-in-out infinite;
  }
}
